# Set modifier keys
set $super Mod4
set $alt Mod1

# Set font
font pango: Noto Sans 8

# Use Mouse+$super to drag floating windows to their wanted position
floating_modifier $super

# Autostart settings
exec --no-startup-id xsetroot -solid "#333333"
exec --no-startup-id xsettingsd &
exec --no-startup-id feh --bg-scale '/home/ajmalmohad/wallpaper.jpg'

# Keybindings for starting applications
bindsym $alt+Return exec alacritty  # Start a terminal
bindsym $alt+Shift+d exec i3-dmenu-desktop --dmenu="dmenu -i -fn 'Noto Sans:size=8'"  # Start dmenu
bindsym $alt+d exec rofi -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -columns 3 -font 'Noto Sans 8'  # Start rofi

# Keybindings for volume control
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+  # Increase volume
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-  # Decrease volume
bindsym XF86AudioMute exec amixer set Master toggle  # Mute/unmute volume

# Keybindings for music control
bindsym XF86AudioNext exec mpc next  # Next track
bindsym XF86AudioPrev exec mpc prev  # Previous track
bindsym XF86AudioPlay exec mpc toggle  # Play/pause
bindsym XF86AudioStop exec mpc stop  # Stop playback

# Window management
bindsym $alt+q kill  # Kill focused window

bindsym $alt+Left focus left  # Focus left window
bindsym $alt+Down focus down  # Focus down window
bindsym $alt+Up focus up  # Focus up window
bindsym $alt+Right focus right  # Focus right window

bindsym $alt+Shift+Left move left  # Move focused window left
bindsym $alt+Shift+Down move down  # Move focused window down
bindsym $alt+Shift+Up move up  # Move focused window up
bindsym $alt+Shift+Right move right  # Move focused window right

bindsym $alt+h split h  # Split in horizontal orientation
bindsym $alt+v split v  # Split in vertical orientation

bindsym $alt+f fullscreen toggle  # Toggle fullscreen for the focused container
bindsym $alt+s layout toggle split  # Change container layout split
bindsym $alt+space floating toggle  # Toggle tiling / floating
bindsym $alt+Shift+space focus mode_toggle  # Change focus between tiling / floating windows

# Workspace management
bindsym $alt+Control+Right workspace next  # Switch to next workspace
bindsym $alt+Control+Left workspace prev  # Switch to previous workspace

bindsym $alt+1 workspace 1  # Switch to workspace 1
bindsym $alt+2 workspace 2  # Switch to workspace 2
bindsym $alt+3 workspace 3  # Switch to workspace 3
bindsym $alt+4 workspace 4  # Switch to workspace 4
bindsym $alt+5 workspace 5  # Switch to workspace 5
bindsym $alt+6 workspace 6  # Switch to workspace 6
bindsym $alt+7 workspace 7  # Switch to workspace 7
bindsym $alt+8 workspace 8  # Switch to workspace 8
bindsym $alt+9 workspace 9  # Switch to workspace 9

bindsym $alt+Shift+1 move container to workspace 1  # Move focused container to workspace 1
bindsym $alt+Shift+2 move container to workspace 2  # Move focused container to workspace 2
bindsym $alt+Shift+3 move container to workspace 3  # Move focused container to workspace 3
bindsym $alt+Shift+4 move container to workspace 4  # Move focused container to workspace 4
bindsym $alt+Shift+5 move container to workspace 5  # Move focused container to workspace 5
bindsym $alt+Shift+6 move container to workspace 6  # Move focused container to workspace 6
bindsym $alt+Shift+7 move container to workspace 7  # Move focused container to workspace 7
bindsym $alt+Shift+8 move container to workspace 8  # Move focused container to workspace 8
bindsym $alt+Shift+9 move container to workspace 9  # Move focused container to workspace 9

# Keybindings for exiting i3
bindsym $alt+Shift+r restart  # Restart i3
bindsym $alt+Shift+e exec "i3-nagbar -t warning -m 'Really, exit?' -b 'Yes' 'i3-msg exit'"  # Exit i3

# Keybindings for window resizing
mode "resize" {
    bindsym Left resize shrink width 5 px or 5 ppt  # Shrink width
    bindsym Down resize grow height 5 px or 5 ppt  # Grow height
    bindsym Up resize shrink height 5 px or 5 ppt  # Shrink height
    bindsym Right resize grow width 5 px or 5 ppt  # Grow width
    bindsym Return mode "default"  # Return to default mode
}
bindsym $alt+r mode "resize"  # Enter resize mode

# Panel settings
bar {
    colors {
        background #2f343f
        statusline #2f343f
        separator #4b5262
        focused_workspace       #2f343f #bf616a #d8dee8
        active_workspace        #2f343f #2f343f #d8dee8
        inactive_workspace      #2f343f #2f343f #d8dee8
        urgent_workspacei       #2f343f #ebcb8b #2f343f
    }
    status_command i3status
}

# Client colors
client.focused              #bf616a #2f343f #d8dee8 #bf616a #d8dee8
client.focused_inactive     #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.unfocused            #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.urgent               #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.placeholder          #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.background           #2f343f